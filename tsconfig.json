{
  "version": "1.6.2",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": false,
    "outDir": "dist"
  },
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./src/app/app.ts",
    "./src/app/bootstrap.ts",
    "./src/app/components/dropdown/DropdownComponent.ts",
    "./src/app/directives/SemanticComponent.ts",
    "./src/app/site/components/navbar/navbar.ts",
    "./src/app/vendor.ts",
    "./src/typings/_custom.d.ts",
    "./test/app/app.spec.ts",
    "./test/app/components/dropdown/DropdownComponent.spec.ts",
    "./test/injector.spec.ts",
    "./test/sanity_test.spec.ts",
    "./typings/tsd.d.ts"
  ],
  "compileOnSave": false,
  "exclude": [],
  "atom": {
    "rewriteTsconfig": true
  }
}
